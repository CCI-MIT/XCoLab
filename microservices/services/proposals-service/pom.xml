<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.xcolab</groupId>
        <artifactId>microservice-services</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>proposals-service</artifactId>
    <name>proposals-service</name>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>org.xcolab</groupId>
            <artifactId>members-client</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.xcolab</groupId>
            <artifactId>comment-client</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.xcolab</groupId>
            <artifactId>contestproposal-client</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>


    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${user.home}/.xcolab.application.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jooq</groupId>
                <artifactId>jooq-codegen-maven</artifactId>
                <version>${jooq.version}</version>

                <configuration combine.self="append">
                    <generator>
                        <database>
                            <includes>Group_|xcolab_ProposalMoveHistory|xcolab_ProposalUnversionedAttribute|xcolab_Proposal|xcolab_Proposal2Phase|xcolab_ProposalAttribute|xcolab_ProposalRating|xcolab_ProposalVote|xcolab_ProposalSupporter|xcolab_ProposalVersion|xcolab_PointType|xcolab_ProposalContestPhaseAttribute|xcolab_ProposalMoveHistory|xcolab_OntologySpace|xcolab_ContestPhase|xcolab_ContestPhaseRibbonType|MembershipRequest|xcolab_ProposalReference|xcolab_ProposalRatingValue|xcolab_ProposalRatingType|xcolab_PointsDistributionConfiguration|xcolab_Points</includes>
                        </database>
                    </generator>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
</project>