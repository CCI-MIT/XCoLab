<jsp:root version="2.1" xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:spring="http://www.springframework.org/tags">
  <jsp:directive.attribute name="target" type="java.lang.String" required="false" rtexprvalue="true" description="Blog Search URL" />
  <jsp:directive.attribute name="searchPhrase" type="java.lang.String" required="false" rtexprvalue="true" description="Search Phrase" />

  <div class="searchBlogLink">
    <span><spring:message code="search.didnotfind"/></span>&#160;&#160;
    <b>
      <a href="${target}"><spring:message code="search.colabnews" arguments="${_colabName},${searchPhrase}" argumentSeparator=","/></a>
    </b>
  </div></jsp:root>
