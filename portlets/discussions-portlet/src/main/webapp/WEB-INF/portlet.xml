<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>discussions-portlet</portlet-name>
		<display-name>discussions-portlet</display-name>
		<portlet-class>com.icesoft.faces.webapp.http.portlet.MainPortlet</portlet-class>
		<init-param>
			<name>com.icesoft.faces.VIEW</name>
			<value>/xhtml/view.iface</value>
		</init-param>
		<init-param>
			<name>com.icesoft.faces.EDIT</name>
			<value>/xhtml/edit.iface</value>
		</init-param>
		<init-param>
			<name>com.icesoft.faces.HELP</name>
			<value>/xhtml/help.iface</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>discussions-portlet</title>
			<short-title>discussions-portlet</short-title>
			<keywords>discussions-portlet</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>