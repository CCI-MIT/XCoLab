<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.ViewScopePhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
		<managed-bean-name>feedsBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.feeds.FeedsBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>feedsPreferences</property-name>
			<value>#{preferences}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>preferences</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.feeds.FeedsPreferences</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
</faces-config>