<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.2" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<!-- application related managed beans -->
	<application>
		<view-handler>com.icesoft.faces.facelets.D2DFaceletViewHandler</view-handler>
	</application>
	<factory/>
	<converter>
		<converter-id>StringTruncateConverter</converter-id>
		<converter-class>org.climatecollaboratorium.plans.converters.StringTruncateConverter</converter-class>
	</converter>
	<managed-bean>
		<managed-bean-name>edit</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.common.PortletPreferencesManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>language</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.common.LanguageManagedBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>renderManager</managed-bean-name>
		<managed-bean-class>com.icesoft.faces.async.render.RenderManager</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>resumeUploader</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.icefaces.FileUploadManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>renderManager</property-name>
			<value>#{renderManager}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>themeDisplay</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.common.ThemeDisplayManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navigation</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.plans.NavigationBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>eventBus</property-name>
			<value>#{eventBus}</value>
		</managed-property>
		<managed-property>
			<property-name>externalSimulationBean</property-name>
			<value>#{simulationBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>preferences</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.plans.PlansPreferencesBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>migrationTool</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.plans.migration.MigrationTool</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>planCopyTool</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.plans.migration.PlanCopyTool</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<validator>
		<validator-id>planNameValidator</validator-id>
		<validator-class>org.climatecollaboratorium.plans.validators.PlanNameValidator</validator-class>
	</validator>
</faces-config>