<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>proposals-portlet</portlet-name>
		<icon>/icon.png</icon>
		<indexer-class>org.climatecollaboratorium.plans.utils.Indexer</indexer-class>
		<scheduler-entry>
			<scheduler-event-listener-class>org.xcolab.utils.SendEmailNotifications</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>1</simple-trigger-value>
					<time-unit>minute</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<friendly-url-mapper-class>org.climatecollaboratorium.plans.utils.PlansFriendlyURLMapper</friendly-url-mapper-class>
		<social-activity-interpreter-class>org.climatecollaboratorium.plans.activity.PlansActivityFeedEntry</social-activity-interpreter-class>
		<instanceable>false</instanceable>
		<ajaxable>false</ajaxable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-css>/css/proposals.css</header-portlet-css>
		<header-portlet-css>/xmlhttp/css/simulation/simulation.css</header-portlet-css>
		<header-portlet-javascript>/js/plans-portlet.js?t=123456</header-portlet-javascript>
		<header-portlet-javascript>/js/dirtyCheckCallbacks.js</header-portlet-javascript>
		<header-portlet-javascript>/js/editTrigger.js</header-portlet-javascript>
		<header-portlet-javascript>/../html/js/jquery/jquery.jqplot.js</header-portlet-javascript>
		<header-portlet-javascript>/../html/js/jquery/jqplot.ohlcRenderer.min.js</header-portlet-javascript>
		<header-portlet-javascript>/../html/js/jquery/jqplot.barRenderer.min.js</header-portlet-javascript>
		<header-portlet-javascript>/../html/js/jquery/jqplot.canvasTextRenderer.min.js</header-portlet-javascript>
		<header-portlet-javascript>/../html/js/jquery/jqplot.canvasAxisLabelRenderer.min.js</header-portlet-javascript>
		<header-portlet-javascript>/../html/js/jquery/jquery-ui-1.7.2.custom.js</header-portlet-javascript>
		<header-portlet-javascript>/xmlhttp/js/navigation/navigationManager.js</header-portlet-javascript>
		<header-portlet-javascript>/xmlhttp/js/simulation/model-inputs-render.js</header-portlet-javascript>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>