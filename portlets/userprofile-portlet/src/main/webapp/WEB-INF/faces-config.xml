<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
		<phase-listener>com.liferay.faces.util.lifecycle.ViewScopePhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
		<managed-bean-name>userprofileBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.userprofile.UserProfileBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>messagingPortletId</property-name>
			<value>messagingportlet_WAR_messagingportlet</value>
		</managed-property>
	</managed-bean>
	<validator>
		<validator-id>screenNameValidator</validator-id>
		<validator-class>org.xcolab.portlets.userprofile.validators.ScreenNameValidator</validator-class>
	</validator>
	<validator>
		<validator-id>emailValidator</validator-id>
		<validator-class>org.xcolab.portlets.userprofile.validators.UserEmailValidator</validator-class>
	</validator>
	<validator>
		<validator-id>userPasswordValidator</validator-id>
		<validator-class>org.xcolab.portlets.userprofile.validators.UserPasswordValidator</validator-class>
	</validator>
</faces-config>