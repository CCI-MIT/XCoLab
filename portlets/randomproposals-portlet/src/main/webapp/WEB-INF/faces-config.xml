<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
		<phase-listener>com.liferay.faces.util.lifecycle.ViewScopePhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
		<managed-bean-name>randomProposalsBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.randomproposals.RandomProposalsBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>preferencesBean</property-name>
			<value>#{preferencesBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>preferencesBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.randomproposals.PreferencesBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
</faces-config>