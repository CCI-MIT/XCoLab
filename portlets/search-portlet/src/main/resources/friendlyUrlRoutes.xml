<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 6.1.0//EN"
        "http://www.liferay.com/dtd/liferay-friendly-url-routes_6_1_0.dtd">
<routes>

    <route>
        <pattern>/for/{searchPhrase}</pattern>
        <generated-parameter name="action">search</generated-parameter>
        <generated-parameter name="searchPhrase">{searchPhrase}</generated-parameter>
    </route>

    <route>
        <pattern>/for/{searchPhrase}/page/{pageNumber}</pattern>
        <generated-parameter name="action">search</generated-parameter>
        <generated-parameter name="searchPhrase">{searchPhrase}</generated-parameter>
        <generated-parameter name="pageNumber">{pageNumber}</generated-parameter>
    </route>

    <route>
        <pattern>/for/{searchPhrase}/in/{searchLocation}</pattern>
        <generated-parameter name="action">searchLocation</generated-parameter>
        <generated-parameter name="searchPhrase">{searchPhrase}</generated-parameter>
        <generated-parameter name="searchLocation">{searchLocation}</generated-parameter>
    </route>

    <route>
        <pattern>/for/{searchPhrase}/in/{searchLocation}/page/{pageNumber}</pattern>
        <generated-parameter name="action">searchLocation</generated-parameter>
        <generated-parameter name="searchPhrase">{searchPhrase}</generated-parameter>
        <generated-parameter name="searchLocation">{searchLocation}</generated-parameter>
        <generated-parameter name="pageNumber">{pageNumber}</generated-parameter>
    </route>

</routes>