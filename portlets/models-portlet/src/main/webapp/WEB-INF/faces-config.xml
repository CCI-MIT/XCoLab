<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
		<phase-listener>com.liferay.faces.util.lifecycle.ViewScopePhaseListener</phase-listener>
	</lifecycle>
	<managed-bean>
		<managed-bean-name>jsIntegration</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.jsintegration.JSIntegrationBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>category</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.CategoriesBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sim</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.SimulationsBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>categories</property-name>
			<value>#{category}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>simBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.SimulationBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>JSEventManager</property-name>
			<value>#{jsIntegration}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navigation</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.NavigationBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>eventBus</property-name>
			<value>#{eventBus}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>supportBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.suggest.SupportBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>permissions</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.ModelsPermissionsBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
</faces-config>