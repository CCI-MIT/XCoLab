<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.2" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<!-- application related managed beans -->
	<application>
		<view-handler>com.icesoft.faces.facelets.D2DFaceletViewHandler</view-handler>
	</application>
	<factory/>
	<managed-bean>
		<managed-bean-name>edit</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.common.PortletPreferencesManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>language</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.common.LanguageManagedBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>renderManager</managed-bean-name>
		<managed-bean-class>com.icesoft.faces.async.render.RenderManager</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>resumeUploader</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.icefaces.FileUploadManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>renderManager</property-name>
			<value>#{renderManager}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>themeDisplay</managed-bean-name>
		<managed-bean-class>com.liferay.util.bridges.jsf.common.ThemeDisplayManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>jsIntegration</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.jsintegration.JSIntegrationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>category</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.CategoriesBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>sim</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.SimulationsBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>categories</property-name>
			<value>#{category}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>breadcrumb</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.BreadcrumbBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>simBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.SimulationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>JSEventManager</property-name>
			<value>#{jsIntegration}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navigation</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.NavigationBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>breadcrumbBean</property-name>
			<value>#{breadcrumb}</value>
		</managed-property>
		<managed-property>
			<property-name>eventBus</property-name>
			<value>#{eventBus}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>supportBean</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.support.SupportBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>permissions</managed-bean-name>
		<managed-bean-class>org.xcolab.portlets.models.ModelsPermissionsBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
</faces-config>