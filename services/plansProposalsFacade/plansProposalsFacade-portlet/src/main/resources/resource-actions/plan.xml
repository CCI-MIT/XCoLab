<!-- Resource action mappings for plans portlet -->
<resource-action-mapping>
	<portlet-resource>
		<portlet-name>plans</portlet-name>
		<supports>
			<action-key>ADD_PLAN</action-key>
			<action-key>VIEW</action-key>
            <action-key>EDIT_ANY_PLAN</action-key>
            <action-key>EDIT_PLAN</action-key>
		</supports>
		<community-defaults>
			<action-key>VIEW</action-key>
			<action-key>ADD_PLAN</action-key>
		</community-defaults>
		<guest-defaults>
			<action-key>VIEW</action-key>
		</guest-defaults>
		<guest-unsupported>
			<action-key>ADD_PLAN</action-key>
		</guest-unsupported>
	</portlet-resource>
	<model-resource>
		<model-name>com.ext.portlet.plans.model.Plan</model-name>
		<portlet-ref>
			<portlet-name>plans</portlet-name>
		</portlet-ref>
		<supports>
			<action-key>UPDATE</action-key>
			<action-key>VIEW</action-key>
		</supports>
		<community-defaults>
			<action-key>VIEW</action-key>
			<action-key>UPDATE</action-key>
            <action-key>EDIT_PLAN</action-key>
		</community-defaults>
		<guest-defaults>
			<action-key>VIEW</action-key>
		</guest-defaults>
		<guest-unsupported>
			<action-key>UPDATE</action-key>
		</guest-unsupported>
	</model-resource>
</resource-action-mapping>