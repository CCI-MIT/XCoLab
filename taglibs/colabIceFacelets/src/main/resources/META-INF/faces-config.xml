<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<managed-bean>
		<managed-bean-name>discussionTestBean</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.facelets.discussions.test.DiscussionTestBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>discussionBean</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.facelets.discussions.DiscussionBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>eventBus</property-name>
			<value>#{eventBus}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>eventBus</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.events.EventBusImpl</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>simulationBean</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.facelets.simulations.SimulationBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>eventBus</property-name>
			<value>#{eventBus}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>navigationManagerBean</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.navigation.NavigationManagerBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>eventBus</property-name>
			<value>#{eventBus}</value>
		</managed-property>
		<managed-property>
			<property-name>sendUnchanged</property-name>
			<value>#{true}</value>
		</managed-property>
	</managed-bean>
	<validator>
		<validator-id>requiredFieldsValidator</validator-id>
		<validator-class>org.climatecollaboratorium.validators.RequiredFieldValidator</validator-class>
	</validator>
	<validator>
		<validator-id>discussionCategoryNameUniqueValidator</validator-id>
		<validator-class>org.climatecollaboratorium.facelets.discussions.validators.CategoryNameValidator</validator-class>
	</validator>
</faces-config>